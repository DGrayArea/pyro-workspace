{
  "name": "@pyro-labs/evm-sdk",
  "version": "0.0.1",
  "description": "EVM SDK for Pyro - Send transactions, interact with contracts, and more on EVM chains",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "pyro",
    "sdk",
    "blockchain",
    "evm",
    "ethereum",
    "ethers",
    "transactions",
    "contracts",
    "flashbots"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DGrayArea/pyro-workspace.git",
    "directory": "packages/evm-sdk"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@pyro-labs/core": "workspace:*",
    "@pyro-labs/utils": "workspace:*",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist"
  ]
}
